    private void MostrarSiguiente()
    {
        if (imagenActual < totalImagenes)
        {
            imagenActual++;
        }
        else
        {
            imagenActual = 1;  // Si llegamos al final, volvemos a la primera imagen
        }
    }

    private void MostrarAnterior()
    {
        if (imagenActual > 1)
        {
            imagenActual--;
        }
        else
        {
            imagenActual = totalImagenes;  // Si estamos en la primera, vamos a la última imagen
